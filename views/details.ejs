                    <td>ZIn</td>
                    <td class="open">Open</td>
                </tr>
                <tr>
                    <td>movie app</td>
                    <td>basic movie app</td>
                    <td>Honeshwar</td>
                    <td class="open">Open</td>
                </tr>
                <tr>
                    <td>Cart</td>
                    <td>basic cart</td>
                    <td>ZIn</td>
                    <td class="open">Open</td>
                </tr>
                <tr>
                    <td>movie app</td>
                    <td>basic movie app</td>
                    <td>Honeshwar</td>
                    <td class="open">Open</td>
                </tr>
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="4">copyright &copy; </td>
                </tr>
            </tfoot>
        </table>
   </section>

   <form id="create-project-form" action="./project/create-issue" method="post">
   
    <div>
        <h2>CREATE ISSUE</h2>
    </div>

    <div>
        <div>
            <input type="text" required name="title" placeholder="Title">
        </div>
    
        <div>
            <input type="text" required name="description" placeholder="Description">
        </div>
    
        <div>
            <input type="text" required name="labels" placeholder="Enter labels more than one separated by comas">
        </div>

        <div>
            <input type="text" required name="author" placeholder="Author Name">
        </div>

        <div id="create-project-form-btn">
            <button type="submit"> Create Issue</button>
            <a href="#details-header" id="create-project-cancel-btn">Close</a>
        </div>
    
    </div>

    
   </form>
</body>
</html>